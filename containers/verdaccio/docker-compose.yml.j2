version: '3.1'

services:
  verdaccio:
    build: .
    image: verdaccio/verdaccio
    container_name: "Verdaccio"
    restart: always
    networks:
      - verdaccio-network
    environment:
      - VERDACCIO_PORT=4873
    ports:
      - "4873:4873"
    volumes:
      - {{ srv_DOCKER }}/volumes/verdaccio/storage:/verdaccio/storage
      - {{ srv_DOCKER }}/volumes/verdaccio/config:/verdaccio/conf
      - {{ srv_DOCKER }}/volumes/verdaccio/plugins:/verdaccio/plugins
      - {{ srv_DOCKER }}/volumes/verdaccio/logs:/verdaccio/logs

networks:
  verdaccio-network:
    driver: bridge